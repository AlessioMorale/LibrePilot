<xml>
    <object name="LineFollowerStatus" singleinstance="true" settings="false" category="Control">
        <description>Line Follower module status</description>
        <field name="Status" units="" type="enum" elements="1" options="Idle,Calibrate,Arming,Run,Stop" defaultvalue="Idle"/>
        <field name="Error" units="" type="enum" elements="1" options="None,LostTrack,NoCalibration" defaultvalue="None"/>
        <field name="yawrate" units="deg/s" type="float" elements="1"/>
        <field name="throttle" units="" type="float" elements="1"/>
        <field name="dT" units="s" type="float" elements="1"/>
        
        <access gcs="readwrite" flight="readwrite"/>
        <telemetrygcs acked="false" updatemode="manual" period="0"/>
        <telemetryflight acked="false" updatemode="periodic" period="100"/>
        <logging updatemode="manual" period="0"/>
    </object>
</xml>
