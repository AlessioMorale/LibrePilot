<xml>
    <object name="LineSensor" singleinstance="true" settings="false" category="Sensors">
        <description>Line Sensor module</description>
        <field name="sensors" units="raw" type="int16" elements="8"/>
        <field name="value" units="deg" type="float" elements="1"/>
        <field name="min" units="raw" type="int16" elements="1"/>
        <field name="max" units="raw" type="int16" elements="1"/>
        <access gcs="readwrite" flight="readwrite"/>
        <telemetrygcs acked="false" updatemode="manual" period="0"/>
        <telemetryflight acked="false" updatemode="periodic" period="10000"/>
        <logging updatemode="manual" period="0"/>
    </object>
</xml>
